
@*
    FEATURE DEFAULT
*@

@using EntityLayer.Concrete
@model List<Feature>


<div class="best-rooms py-5">
    <div class="container py-md-5">
        <div class="ban-content-inf row">
            <div class="maghny-gd-1 col-lg-6">
              <div class="maghny-grid">
                <figure class="effect-lily border-radius  m-0">
                    <img class="img-fluid" src="@Model.FirstOrDefault().Post1Image" alt="" />
                    <figcaption>
                        <div>
                            <h4>@Model.FirstOrDefault().Post1Name</h4>
                            <p>From @Model.FirstOrDefault().Post1Description € </p>
                        </div>

                    </figcaption>
                </figure>
            </div>
            </div>
            <div class="maghny-gd-1 col-lg-6 mt-lg-0 mt-4">
                <div class="row">
                     @for(var i =1; i<4; i++) // iterates the features picture
                    {
                    <div class="maghny-gd-1 col-6">
                        <div class="maghny-grid">
                            <figure class="effect-lily border-radius">
                                <img class="img-fluid" src="@Model.FirstOrDefault().Post1Image" alt="" />
                                <figcaption>
                                    <div>
                                        <h4>@Model.FirstOrDefault().Post1Name</h4>
                                        <p>From @Model.FirstOrDefault().Post1Description € </p>
                                    </div>

                                </figcaption>
                            </figure>
                        </div>
                    </div>
                    }
                </div>
                
            </div>
        </div>
    </div>
</div>